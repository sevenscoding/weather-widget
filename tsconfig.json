{
  "compilerOptions": {
    "target": "ES2019",
    "noEmit": true,
    "lib": [
      "ES2019",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "src/app/types",
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
